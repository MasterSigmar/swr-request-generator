{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/"]
}
